<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"  
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"  
             x:Class="UserControlStyles.UserControls.MyCustomControl"
             xmlns:local="clr-namespace:UserControlStyles.UserControls"
             x:DataType="local:MyCustomControl"
             >  
    <VerticalStackLayout>  
        <HorizontalStackLayout>  
            <Rectangle x:Name="UpRectangle"  
                WidthRequest="50"  
                HeightRequest="50"  
                Fill="{Binding UpperRectColor}"  
                Stroke="DarkBlue"  
                StrokeThickness="2" />  
            <Label Text="{Binding UpperText}" Margin="16,0,0,0" x:Name="UpTextLabel" />  
        </HorizontalStackLayout>  
    </VerticalStackLayout>  
</ContentView>
