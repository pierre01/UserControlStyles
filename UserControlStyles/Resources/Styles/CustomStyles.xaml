<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:uc="clr-namespace:UserControlStyles.UserControls">

    <Style TargetType="uc:MyCustomControl">
        <Setter Property="UpperText" Value="StyledText" />
        <Setter Property="UpperRectColor" Value="Red" />
    </Style>

    <Style x:Key="SpecialStyle" TargetType="uc:MyCustomControl">
        <Setter Property="UpperText" Value="SpecialStyledText" />
        <Setter Property="UpperRectColor" Value="Green" />
    </Style>


</ResourceDictionary>
